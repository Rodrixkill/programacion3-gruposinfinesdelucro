<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="6dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/edit_text_style">

    <ImageView
        android:id="@+id/pictureScheduledExercise"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/curlexp"
        android:padding="0dp"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/nameScheduledExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Curl"
        android:textSize="40sp"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/pictureScheduledExercise"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/scheduleScheduledExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="4 series, 12 rep."
        android:textSize="30sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/pictureScheduledExercise"
        android:layout_below="@id/nameScheduledExercise"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="18dp"/>


</RelativeLayout>